<idea-plugin>
    <id>com.c5inco.ModifiersPlaygroundPlugin</id>
    <name>Modifiers Playground</name>
    <vendor email="csinco@google.com" url="http://www.jetbrains.com">c5inco</vendor>

    <description><![CDATA[
A plugin to help learn how to use Jetpack Compose Modifiers
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="com.c5inco.modifiers" class="com.c5inco.modifiers.plugin.PluginAction"
                text="Show Compose Demo...">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>